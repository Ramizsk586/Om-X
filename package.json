{
  "name": "om-x",
  "productName": "Om-X",
  "version": "1.6.0",
  "description": "Om-X",
  "main": "main.js",
  "author": "Sk Abdul Ramiz",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ramizsk586/Om-X.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "electron-updater": "^6.1.7",
    "groq-sdk": "^0.3.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.omx.browser",
    "productName": "Om-X.browser",
    "protocols": [
      {
        "name": "HTTP Protocol",
        "schemes": [
          "http",
          "https"
        ]
      }
    ],
    "fileAssociations": [
      {
        "ext": [
          "html",
          "htm",
          "shtml",
          "xhtml"
        ],
        "name": "HTML Document",
        "role": "Viewer",
        "mimeType": "text/html"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Ramizsk586",
        "repo": "Om-X"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!**/*.ts",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/app.ico",
      "legalTrademarks": "Om-X Browser"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Om-X",
      "deleteAppDataOnUninstall": false,
      "perMachine": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/app.icns",
      "category": "public.app-category.productivity",
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "Web URL",
            "CFBundleURLSchemes": [
              "http",
              "https"
            ]
          }
        ]
      }
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png",
      "category": "WebBrowser",
      "mimeTypes": [
        "text/html",
        "x-scheme-handler/http",
        "x-scheme-handler/https"
      ]
    }
  }
}